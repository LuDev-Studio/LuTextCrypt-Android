<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/colorHintergrund">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextfarbe"
        android:text="Used permissions" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextfarbe"
        android:layout_marginTop="10dp"
        android:text="Permission: VIBRATE" />


    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextfarbe"
        android:textSize="16dp"
        android:text="needed to vibrate then you are clicking e.g. a button."/>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorTextfarbe"
        android:text="Permission: WRITE/READ_EXTERNAL_STORAGE"/>


    <TextView
        android:id="@+id/textView13"
        android:textColor="@color/colorTextfarbe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="used to save e.g. RSA-Keys on your phone and use them later to en/decrypt. " />


    <Button
        android:id="@+id/button_dialo_permissions_einstellungen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.06"
        android:background="@color/colorButtonfarbe"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@color/colorTextfarbe"
        android:textSize="20dp" />



</LinearLayout>
